{
    "manifest_version": 3,
    "name": "Burnout Tracker",
    "version": "1.0",
    "description": "Track burnout indicators and prevent overworking.",
    "permissions": ["storage", "tabs", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "host_permissions": ["<all_urls>"]
  }
  