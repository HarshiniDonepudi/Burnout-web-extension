{
  "manifest_version": 3,
  "name": "Burnout Tracker",
  "version": "1.1",
  "description": "Tracks your browsing, work/leisure activity, and periodic well-being check-ins. Data is synced to Google Sheets.",
  "permissions": [
    "storage",
    "tabs",
    "idle",
    "webNavigation",
    "alarms",
    "notifications",
    "webRequest",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://script.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  
  }
}
