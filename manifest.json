{
  "manifest_version": 3,
  "name": "Burnout Tracker",
  "version": "1.2",
  "description": "Tracks your browsing activity (time on work vs. leisure sites), tab switching rate, and more. Data is synced immediately to Google Sheets.",
  "permissions": [
    "storage",
    "tabs",
    "idle",
    "webNavigation",
    "alarms",
    "notifications",
    "webRequest",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://script.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
   
  }
}
